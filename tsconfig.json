{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "typescript",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@wdio/sync"
    ],
    "types": [
      "node",
      "webdriverio/async",
      "@wdio/cucumber-framework",
      "expect-webdriverio",
      "jquery"     
    ]
  },
  "exclude": [
    "node_modules",
    "typescript",
    "./.tsbuild/"
  ]
}